<div class="container">
  <div class="row justify-content-center">
    <div class=".col-sm-12 col-md-2">
    </div>
    <div class=".col-sm-12 col-md-8">
      <div class="card">
          <% if @items %>
            <div class="card-title">Grocery List:</div>
            <% @items.each do |i| %>
            <div class="card-items">
              <%= i.quantity %> x
              <%= i.product_name %>
            </div>
            <% end %>
          <% end %>
          <div class="card-form">
              <%= simple_form_for([@shopping_list, @item], remote: true, class: 'form-inline') do |item| %>
                <%= item.input_field :quantity, size: '5', placeholder: 'Qnty'  %>
                <%= item.input_field :product_name, size: '30', placeholder: 'Product Name' %>
                <%= item.submit "+" , class: "card-btn"  %>
              <% end %>
          </div>
          <div class="btn-layer">
            <%= link_to "Post shopping list", shopping_list_path(@shopping_list), class: "btn-blue" %>
          </div>
        </div>
    </div>
    <div class=".col-sm-12 col-md-2">
    </div>
  </div>
</div>
