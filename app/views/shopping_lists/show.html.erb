<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Product</th>
      <th scope="col">Quantity</th>
    </tr>
  </thead>
  <tbody>
    <% if @items %>
        <% n = 0 %>
        <% @items.each do |i| %>
        <tr>
          <% n += 1 %>
          <th scope="row"><%= n %></th>
          <td><%= i.product_name %></td>
          <td><%= i.quantity %></td>
        </tr>
        <% end %>
      <% end %>
  </tbody>
</table>

<p>Your note: </p>
<p><%= @shoppingList.notes %></p>
<p><%= @shoppingList.status %></p>


