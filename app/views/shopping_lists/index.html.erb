
<div class = main-container>
  <div class="cards-container">
    <div class="row">
      <% @shopping_lists.each do |x|  %>
        <div class="col-12 col-md-6 col-lg-4" style = "grid-gap: 16px; padding: 16px">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"> Shopping List number <%= x.id %></h5>
              <div class="btn">
                <%= link_to 'Show', shopping_list_path(x), :class => "btn btn-info" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>  
  </div>
</div>
