<h1>ShoppingLists#index</h1>
<p>Find me in app/views/shopping_lists/index.html.erb</p>

<h1>Shopping List</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shopping_lists.each do |shopping_list| %>
      <tr>
        <td><%= shopping_list.name %></td>
        <td><%= shopping_list.user_id %></td>
        <td><%= link_to 'Show', shopping_list %></td>
        <% if policy(shopping_list).update? %>
          <%= link_to "Update", edit_shopping_list_path(shopping_list) %>
        <% end %>
        <td><%= link_to 'Destroy', shopping_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<% if policy(Shopping_list).create? %>
  <%= link_to "New Shopping List", new_shopping_list_path %>
<% end %>



