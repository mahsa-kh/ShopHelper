<div class= "mx-3">
  <div class = "row">

    <div class="col-12 col-md-6 col-lg-6">
      <div class = "row" >
        <% @shopping_lists.each do |x|  %>
          <div class="col-12 col-md-6 col-lg-4">
            <div class="card" style = "border-radius: 3px; box-shadow: 0 0 10px rgba(0,0,0,0.2);">
              <div class="card-body">
                <h5 class="card-title"> <%= ShoppingList.find(x.id).user.first_name %></h5>
                  <div class="btn">
                  <%= link_to 'Show', shopping_list_path(x), :class => "btn btn-info" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-12 col-md-6 col-lg-6">
      <div 
      id="map"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="pk.eyJ1Ijoicm9kb2xmb3AiLCJhIjoiY2s4MDl6cG9sMGNnaDNkcGcyaml4YXJ1MCJ9.fTw_XIDzAzHw5clxchO04A"
      ></div>
    </div>
  </div>
</div>
