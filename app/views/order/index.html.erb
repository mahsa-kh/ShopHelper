<p>Find me in app/views/oder/index.html.erb</p>

<h1>Order</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.user_id %></td>
        <td><%= link_to 'Show', order %></td>
        <% if policy(order).update? %>
          <%= link_to "Update", edit_order_path(order) %>
        <% end %>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<% if policy(Order).create? %>
  <%= link_to "New Order", new_order_path %>
<% end %>



